<div class="main">

	<div class="header">
		<span class="title f-title c-secondary"><a href="/" class="h-link">
				30<span class="exp c-accent">c</span>27<span class="exp c-accent">blog</span>
			</a></span>
	</div>

	<div class="page">

		{{#if msg}}
		<span class="f-text c-accent">*{{msg}}*</span>
		{{/if}}

		<span class="post-meta-title f-code c-secondary">{{post.title}}</span>

		<div class="post-meta">
			<span class="f-code c-secondary">posted on <span class="c-accent">{{post.date}}</span><br />
					in <span class="c-accent">{{post.language}}</span><br />
					<span class="c-accent">{{post.views}}</span> views</span>
		</div>

		<div class="content">

			{{{post.content}}}

		</div>

		<span class="subtitle f-code c-secondary"><a href="/">back</a></span>

	</div>

</div>